---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import TableOfContents from "../../components/TableOfContents.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
---

<Layout title={`${post.data.title} | Yuusuke's Blog`}>
    <div class="bg-white dark:bg-zinc-950 py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="lg:grid lg:grid-cols-12 lg:gap-8">
                {/* Main Content */}
                <div class="lg:col-span-8">
                    <div
                        class="mx-auto max-w-3xl text-base leading-7 text-zinc-700 dark:text-zinc-300"
                    >
                        {/* Header */}
                        <header class="mb-10">
                            <div class="mb-6 flex items-center gap-x-4 text-xs">
                                <div>公開日</div>
                                <time
                                    datetime={post.data.pubDate.toISOString()}
                                    class="text-zinc-500 dark:text-zinc-400"
                                >
                                    {
                                        post.data.pubDate.toLocaleDateString(
                                            "ja-JP",
                                        )
                                    }
                                </time>
                                {
                                    post.data.updatedDate && (
                                        <div>更新日</div>
                                        <time
                                            datetime={post.data.updatedDate.toISOString()}
                                            class="text-zinc-500 dark:text-zinc-400"
                                        >
                                            {post.data.updatedDate.toLocaleDateString(
                                                "ja-JP",
                                            )}
                                        </time>
                                    )
                                }
                                {
                                    post.data.tags?.map((tag) => (
                                        <span class="relative z-10 rounded-full bg-zinc-50 dark:bg-zinc-900 px-3 py-1.5 font-medium text-zinc-600 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800">
                                            {tag}
                                        </span>
                                    ))
                                }
                            </div>
                            <h1
                                class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-white sm:text-4xl"
                            >
                                {post.data.title}
                            </h1>
                            {
                                post.data.image && (
                                    <div class="mt-8">
                                        <Image
                                            src={post.data.image}
                                            alt={post.data.title}
                                            class="aspect-[16/9] w-full rounded-2xl bg-zinc-100 dark:bg-zinc-800 object-cover sm:aspect-[2/1] lg:aspect-[3/2]"
                                        />
                                    </div>
                                )
                            }
                        </header>

                        {/* Content using Tailwind Typography */}
                        <div
                            class="prose prose-zinc dark:prose-invert max-w-none"
                        >
                            <Content />
                        </div>
                    </div>
                </div>

                {/* Sidebar / Table of Contents */}
                <aside class="hidden lg:block lg:col-span-4">
                    <div class="sticky top-24">
                        <TableOfContents headings={headings} />
                    </div>
                </aside>
            </div>
        </div>
    </div>
</Layout>
